<div class="formContainer">
    <h1 class="nameOfBook formH1">Edit Book Information</h1>
<div>
    
    <form action="/books/{{booksFromDb._id}}?_method=PUT" method="POST">

        <label for="name">Book Title</label>
        <input type="text" name="name" value="{{booksFromDb.name}}" required/>

        <label for="author">Author</label>
        <input type="text" name="author" value="{{booksFromDb.author}}" placeholder="(Max 20 Characters)"/>

        <label for="review">Review</label>
        <textarea rows="4" cols="50" name="review" type="text" maxlength="30" placeholder="(Max 20 Characters)">{{booksFromDb.review}}</textarea>

        <input type="submit" class="otherEditButton" value="EDIT"/>
    </form>

    <form action="/books/{{booksFromDb._id}}?_method=DELETE" method="POST">
        <input type="submit" class="deleteButton" value="DELETE" />
    </form>
</div>
</div>