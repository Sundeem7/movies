<div class="formContainer">
<div>
    
    <form action="/books/{{booksFromDb._id}}?_method=PUT" method="POST">

        <label for="name">Book Title</label>
        <input type="text" name="name" value="{{booksFromDb.name}}" required/>

        <label for="author">Author</label>
        <input type="text" name="author" value="{{booksFromDb.author}}" required/>

        <label for="review">Review</label>
        <textarea rows="4" cols="50" name="review" type="text" value="{{booksFromDb.review}}" maxlength="30" placeholder="{{booksFromDb.review}}"></textarea>

        <input type="submit" value="Complete Edit" required/>
    </form>

    <form action="/books/{{booksFromDb._id}}?_method=DELETE" method="POST">
        <input type="submit" value="Delete Book" />
    </form>
