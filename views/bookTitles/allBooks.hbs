<h1>My Books</h1>

<div class="addlistContainer">
    <a href="/books/add">Add Book</a>
</div>

<div class="booksContainer">
    <ul class="listDisplay">
        {{!-- this will create an li for EACH item --}}
        {{#each allBooks}}
        <div class="listContainer">
            <div class="booksContainer">
                <img class="imageCard" src="/images/books.jpg" alt="Book Image">
                <div class="allInfo">
                    <h3 class="bookTitle">{{name}}</h4>
                        <article class="stats">
                            <ul>
                                <li>Total Revenue: ${{revenue}}.00</li>
                                <li>Amusement Park: {{amusementPark}}</li>
                            </ul>
                        </article>
                </div>
            </div>
        </div>
        {{/each}}
    </ul>
</div>