<form method="POST" action="/">
<h1>Enter a New Production Company</h1>

<input type="hidden" name="productionId" value="{{productionCoFromDb._id}}">

<!-- Template for creating input form for a string object key called stringMember-->
    <label for="name">Production Company Name</label>
    <input type="text" name="name" required/>

    <label for="revenue">Revenue</label>
    <input type="number"  name="revenue" required/>

    <label for="amusementPark">Amusement Park</label>
    <select name="amusementPark">
        <option value="yes">Yes</option>
        <option value="no" selected>No</option>
    </select>

    <input type="submit" value="Create Production Company" />
    
</form>

