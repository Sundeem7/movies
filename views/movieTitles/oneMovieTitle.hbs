<div class="formContainerM">
    <h1 class="nameOfMovie formH1M">Edit Movie Information</h1>
    <div>

        <form action="/movies/{{moviesFromDb._id}}?_method=PUT" method="POST">

            <label for="nameOfMovie">Movie Title</label>
            <input type="text" name="nameOfMovie" value="{{moviesFromDb.nameOfMovie}}" required />

            <label for="director">Director</label>
            <input type="text" name="director" value="{{moviesFromDb.director}}" placeholder="(Max 20 Characters)" />

            <label for="movieReview">Review</label>
            <textarea rows="4" cols="50" name="movieReview" type="text" maxlength="20"
                placeholder="(Max 20 Characters)">{{moviesFromDb.movieReview}}</textarea>

            <input type="submit" class="otherEditButton" value="EDIT" />
        </form>

        <form action="/movies/{{moviesFromDb._id}}?_method=DELETE" method="POST">
            <input type="submit" class="deleteButton" value="DELETE" />
        </form>
    </div>