<div class="formContainerT">
    <h1 class="nameOfBook formH1B">Edit Book Information</h1>
    <div>

        <form action="/tvShows/{{tvShowsFromDb._id}}?_method=PUT" method="POST">

            <label for="nameOfTvShow">Book Title</label>
            <input type="text" name="nameOfTvShow" value="{{tvShowsFromDb.nameOfTvShow}}" maxlength="20" required />

            <label for="network">Network</label>
            <input type="text" name="network" value="{{tvShowsFromDb.network}}" placeholder="(Max 20 Characters)" maxlength="20"/>

            <label for="tvShowReview">Review</label>
            <textarea rows="4" cols="50" name="tvShowReview" type="text" maxlength="20"
                placeholder="(Max 20 Characters)">{{tvShowsFromDb.tvShowReview}}</textarea>

            <input type="submit" class="otherEditButton" value="EDIT" />
        </form>

        <form action="/tvShows/{{tvShowsFromDb._id}}?_method=DELETE" method="POST">
            <input type="submit" class="deleteButton" value="DELETE" />
        </form>
    </div>
</div>